{
    "include": [
        "src/**/*",
        "types/**/*",
    ],
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "react": [
                "./node_modules/preact/compat/"
            ],
            "react-dom": [
                "./node_modules/preact/compat/"
            ],
            "@": [
                "./src"
            ],
        },
        "allowSyntheticDefaultImports": true
    }
}
